<!doctype html>
<html lang="en" class="h-100">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <link rel="stylesheet" href="static/css/main.css">

    <title>{{ appName }}</title>
</head>

<body id="app" class="d-flex flex-column h-100 bg-success text-white">

    <main role="main" class="flex-shrink-0">
        <div class="container-fluid mt-4">
            {{{body}}}
        </div>
    </main>

    <footer class="footer mt-auto py-3">
        <div class="container-fluid mt-4">
            <div class="row hidden" id="nextBlock">
                <div class="col-12 mt-5">        
                <span class="h1 font-weight-normal mt-5">{{ __ "next_label" }}</span>
                </div>
                <div class="col-12 ml-5">        
                <span class="h1 font-weight-normal">
                    <i data-feather="calendar" width="36" height="36"></i> <span id="nextMeetingStartDate"></span> 
                    <i data-feather="clock" width="36" height="36"></i> <span id="nextMeetingStartTime"></span>
                    <i data-feather="user" width="36" height="36"></i> <span id="nextMeetingOrganizer"></span>
                </span>
                </div>
            </div>
        </div>
    </footer>


<script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>

